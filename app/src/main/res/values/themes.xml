<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.5" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#E8D4D4</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here.
        -->

        <item name="materialButtonStyle">@style/Theme.5.MyStyle.button</item>
        <item name="android:textViewStyle">@style/Theme.5.MyStyle.TextView</item>
    </style>

    <style name="Theme.5.MyStyle.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="Theme.5.MyStyle.button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/grey_button</item>
        <item name="android:textColor">@color/teal_200</item>
    </style>

    <style name="Theme.5.MyStyle.Other" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/alfa_EditText</item>
        <item name="android:background">@color/background_EditText</item>
    </style>



</resources>